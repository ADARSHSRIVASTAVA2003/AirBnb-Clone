<% layout("/layouts/boilerplate")%>

<div class="row mt -3">
    <h1 class="col-6 offset-3">Signup on wonderlust</h1>
    <div class="col-6 offset-3">
<form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">username</label>
<input type="text" id="username" name="username" placeholder="Enter  the  username"  class="form-control" required>
<div class="valid-feedback">looks good</div>
</div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
<input type="email" id="email" name="email" placeholder="Enter  the  E-mail"  class="form-control" required>
<!-- <div class="valid-feedback">title  look good</div> -->
</div>
    <div class="mb-3">
        <label for="username" class="form-label">Password</label>
<input type="password" id="password" name="password" placeholder="Enter  the  password"  class="form-control" required>
<!-- <div class="valid-feedback">title  look good</div> -->
</div>

<button class="btn btn-success">Signup</button>

</form>
     </div>
</div>